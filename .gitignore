# ===============================================
#    Standard .gitignore for Android Projects
# ===============================================

# Folders and files generated by the build system
# ------------------------------------------------
*.apk
*.aab
*.ap_
*.a.out
*.so
build/
.gradle/
captures/
.DS_Store

# Local configuration file (CONTAINS YOUR API KEY - DO NOT COMMIT)
# -----------------------------------------------------------------
local.properties

# Files and folders generated by the IDE (Android Studio / IntelliJ)
# --------------------------------------------------------------------
.idea/caches/
.idea/libraries/
.idea/modules.xml
.idea/workspace.xml
.idea/navEditor.xml
.idea/assetWizardSettings.xml
*.iws
*.iml
*.ipr
.idea/

# Keystore files (for signing your app - keep these private)
# -----------------------------------------------------------
*.jks
*.keystore

# Gradle files
# ------------
!gradle/wrapper/gradle-wrapper.jar
!**/gradle-wrapper.jar
!gradle-wrapper.jar
gradle-app.setting
gradle.properties

# Google Services file (if you use Firebase - can sometimes contain sensitive info)
# --------------------------------------------------------------------------------
google-services.json

# Log files
# ---------
*.log

# Caching files
# -------------
.cxx/
*.lock

# Navigation component generated files
# ------------------------------------
.navigation/
